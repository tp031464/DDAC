@model UIA.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container" style="margin-top: 50px">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2 class="text-center">Login</h2>
                <div class="form-group" style="margin-top: 50px">
                    @Html.LabelFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new {type = "text", id = "inputUsername", name = "username", @class = "form-control", placeholder = "Enter username", autofocus = "true"})
                    @Html.ValidationMessageFor(model => model.Username, "", new {@class = "text-danger"})
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.TextBoxFor(model => model.Password, new {type = "password", id = "inputPassword", name = "password", @class = "form-control", placeholder = "Enter password"})
                    @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
                </div>

                <div>
                    <input type="checkbox" checked="checked"> Remember me
                </div>

                @if (TempData["IncorrectCredentials"] != null)
                {
                    <div class="alert alert-dismissable alert-danger">

                        <button class="close" aria-hidden="true" type="button" data-dismiss="alert">
                            ×
                        </button>
                        <h4>
                            <b>Incorrect credentials entered!</b>
                        </h4> Please enter a valid combination!
                    </div>
                }

                <button class="btn btn-default center-block" style="margin-top: 50px" type="submit">Log in</button>
                <p class="text-center" style="margin-top:30px">Dont have an account? <a href=@Url.Action("Register", "Account") style="color: black; font-weight: bold;">Click here to register!</a></p>
            </div>
        </div>
    </div>


}
